{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist/",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"]
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
